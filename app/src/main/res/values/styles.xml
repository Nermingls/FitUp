<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!--        <item name="backgroundTint">@color/primary_button_background_color_selector</item>-->
    </style>

    <style name="Widget.App.Button.Continue">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="Widget.App.Button.SaveLanguage">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.App.Button.Action.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="CircleImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button.Icon.Back">
        <item name="icon">@drawable/round_arrow_back_ios_12</item>
    </style>

    <style name="RatingBar"
        parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">9dp</item>
    </style>


    <!--    Button Outlined Icon-->
    <style name="Widget.App.Button.Icon" parent="Widget.App.Button.Mini">
        <item name="cornerRadius">0dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="iconPadding">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Icon</item>
    </style>

    <style name="ThemeOverlay.App.Button.Icon" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!--    Button Mini-->
    <style name="Widget.App.Button.Mini">
        <item name="android:textAppearance">@style/TextAppearance.App.Body.Small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!--    Button Mini Outlined-->
    <style name="Widget.App.Button.Mini.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Body.Small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!--    Text Button-->
    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Subtitle1</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Rounded.24</item>
    </style>

    <style name="ThemeOverlay.App.Dialog.Progress" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Rounded.24</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="ShapeAppearance.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.Rounded.Bottom32" parent="">
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="ShapeAppearance.App.Rounded.24">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.App.Rounded.16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="ThemeOverlay.App.TextInputEditText" parent="">
        <item name="editTextStyle">@style/Widget.App.TextInputEditText</item>
        <item name="colorOnError">@color/color_primary</item>
        <item name="colorOnErrorContainer">@color/color_primary</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorPrimary">@color/black</item>
        <item name="android:maxHeight">120dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Body.Medium</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:maxLength">500</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


    <style name="TextAppearance.App.TextInputEditText.Hint" parent="TextAppearance.App.Body.XLarge">
        <item name="fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputEditText</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">?colorSurfaceContainer</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
        <item name="hintTextColor">?android:textColorSecondary</item>
        <item name="helperTextEnabled">false</item>
    </style>
    <style name="ThemeOverlay.App.TextInputEditText.Prompt" parent="">
        <item name="editTextStyle">@style/Widget.App.TextInputEditText.Prompt</item>
    </style>
    <style name="Widget.App.TextInputEditText.Prompt" parent="Widget.App.TextInputEditText">
        <item name="android:inputType">textMultiLine</item>
    </style>
    <style name="Widget.App.TextInputLayout.Prompt" parent="Widget.App.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputEditText.Prompt</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">300</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>

</resources>
