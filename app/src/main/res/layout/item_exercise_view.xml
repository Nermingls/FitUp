<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginHorizontal="6dp"
    android:padding="16dp"
    android:layout_marginVertical="12dp"
    app:cardBackgroundColor="@color/greyscale_50"
    app:cardCornerRadius="16dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/greyscale_200"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="180dp"
            android:layout_height="143dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Rounded.16"
            tools:src="@drawable/splash" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ellipsize="end"
            android:lines="1"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.App.Headline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Exercise Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description"
            android:layout_width="166dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:lines="4"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.App.Body.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.131"
            tools:text="Excerise bodypart" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/equipment"
            android:layout_width="157dp"
            android:layout_height="43dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:lines="4"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.App.Body.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.615"
            tools:text="equipment" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>